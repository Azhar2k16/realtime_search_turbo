<p style="color: green"><%= notice %></p>

<h1 class="font-bold text-3xl mb-3">All Games</h1>

<%= form_with(url: games_path, method: :get, data: {controller: "search-form",turbo_frame: "games", turbo_action: "advance"}) do |form| %>

  <%= form.label :query, "Search by game name:", class: "block mb-2" %>
    <div class="flex space-x-3">
      <%= form.text_field :query, class: "py-3 px-4 rounded border ring-0 focus:ring-4 focus:ring-orange-100 focus:shadow-none focus:border-orange-500 focus:outline-none", data: {action: "input->search-form#search"} %>

      <%= form.submit 'Search', class: "px-4 py-3 font-medium
      bg-orange-300 text-neutal-900 rounded flex items-center cursor-pointer hover:bg-orange-400 focus:ring-4 ring-0 focus:ring-orange-100" %>
    </div>
<% end %>

<div class="my-16">
  <%= render 'games', games: @games %>
</div>


<%= link_to "New game", new_game_path, class: "px-4 py-3 font-medium
    bg-orange-300 text-neutal-900 inline-flex items-center cursor-pointer hover:bg-orange-400 focus:ring-4 ring-0 focus:ring-orange-100" %>
