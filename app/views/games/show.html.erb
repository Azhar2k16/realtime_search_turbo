<p style="color: green"><%= notice %></p>

<%= render @game %>

<div>
  <%= link_to "Edit this game", edit_game_path(@game), class: "px-4 py-3 font-medium
    bg-orange-300 text-neutal-900 inline-flex items-center cursor-pointer hover:bg-orange-400 focus:ring-4 ring-0 focus:ring-orange-100 mb-2 my-2" %>
  <%= link_to "Back to games", games_path, class: "px-4 py-3 font-medium
    bg-orange-300 text-neutal-900 inline-flex items-center cursor-pointer hover:bg-orange-400 focus:ring-4 ring-0 focus:ring-orange-100" %>

  <%= button_to "Destroy this game", @game, method: :delete, class: "px-4 py-3 font-medium
    bg-orange-300 text-neutal-900 inline-flex items-center cursor-pointer hover:bg-orange-400 focus:ring-4 ring-0 focus:ring-orange-100" %>
</div>
